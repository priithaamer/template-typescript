{
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2020",
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist/cjs",
    "declarationDir": "dist/types",
    "sourceMap": true,
    "lib": [
      "es2020"
    ],
  },
  "include": [
    "src/**/*.ts"
  ]
}